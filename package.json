{
  "name": "@modelcontextprotocol/gcalendar-mcp",
  "version": "1.0.0",
  "description": "Google Calendar integration for Model Context Protocol",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "google-calendar",
    "calendar",
    "ai",
    "llm"
  ],
  "homepage": "https://github.com/modelcontextprotocol/gcalendar-mcp",
  "bugs": {
    "url": "https://github.com/modelcontextprotocol/gcalendar-mcp/issues"
  },
  "license": "MIT",
  "author": "Model Context Protocol Team",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gcalendar-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && mcp-build",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "auth": "npm run build && node dist/index.js auth",
    "test": "vitest && mcp validate",
    "test:coverage": "vitest --coverage",
    "validate": "mcp validate",
    "prepack": "npm run build && mcp validate",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clear-auth": "rm -rf ~/.gcal-mcp && echo 'Google Calendar authentication cleared'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "chrono-node": "^2.8.4",
    "google-auth-library": "^9.15.0",
    "googleapis": "^164.1.0",
    "mcp-framework": "0.2.15",
    "winston": "^3.15.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
